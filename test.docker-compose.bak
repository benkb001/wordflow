services:
  backend:
    build:
      context: ./wordflow-api
    ports:
      - "8080:8080"
    networks:
      - wordflow
    restart: unless-stopped

  frontend:
    build:
      context: ./wordflow
    ports:
      - "4200:80"
    depends_on:
      - backend
    networks:
      - wordflow
    restart: unless-stopped

  db:
    image: postgres:15
    restart: unless-stopped
    environment:
      POSTGRES_DB: wordflow_db
      POSTGRES_USER: benjaminbradford
      POSTGRES_PASSWORD: test
    ports:
      - "5432:5432"
    networks:
      - wordflow
    volumes:
      - db_data:/var/lib/postgresql/data
    command: ["postgres", "-c", "log_statement=all", "-c", "log_connections=on", "-c", "log_disconnections=on"]
networks:
  wordflow:
    driver: bridge

volumes: 
  db_data: 
